ul.preview__list
  each article of articles
    li.preview__item
      ul.preview__breadcrumbs(style='flex-wrap: wrap')
        each singleCategory of article.category
          li.preview__breadcrumbs-item
            a.preview__breadcrumbs-link(href='#') #{singleCategory}
      if article.image
        .preview__background
          img.preview__background-image(src=article.image.src width='460' height='240' alt=`${article.image.alt || article.title}`)
      time.preview__time(datetime=article.createdDateRobot) #{article.createdDateHuman}
      h3.preview__name
        a.preview__name-link(href=`/articles/${article.id}`) #{article.title}
      p.preview__text #{article.announce}
      a.preview__comment(href=`/articles/${article.id}#comments`)
        | Комментарии
        span.preview__cloud
        |
        b.preview__comment-count #{article.comments.length}
