extends layout.pug

block content
  main
    section.search-page
      .search-page__wrapper
        h1 Поиск
        .search.search-page__form
          form(action='/search' method='get' autocomplete='off')
            label
              input(type='text' placeholder='Что ищем?' value=`${query || 'Путешествия'}` name='query')
            button.search__button.button.button--transparent(type='submit') Найти
        if(results)
          if(results.length === 0)
            div(style='display: flex; flex-direction: column; align-items: center;')
              p.search-page__empty Ничего не нашлось
              img(src='img/icons/no-results.svg')
          else
            each article of results
              .search__result
                time.search__date(datetime=article.createdDateRobot) #{article.createdDateHuman}
                a.search__link
                  | #{article.title}
