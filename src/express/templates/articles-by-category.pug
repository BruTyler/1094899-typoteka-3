extends layout.pug

block content
  main.articles-category
    h1 #{categories.find(cat => cat.id == categoryId).name}
    section.articles-category__theme-list
      h2.visually-hidden Список тем
      ul.themes
        each category of categories
          li.themes__item
            a.themes__item-link(class=category.id == categoryId && 'themes__item-link--active', href=`/articles/category/${category.id}`)
              | #{category.name}
              sup #{category.count}
    section.articles-category__list.preview
      h2.visually-hidden Список превью статей
      include partials/preview-list.pug
